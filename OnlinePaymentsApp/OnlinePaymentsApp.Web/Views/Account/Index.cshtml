@model OnlinePaymentsApp.Web.Models.Account.AccountListViewModel
@{
    ViewData["Title"] = "Списък на сметки";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Показване на списък сметки</h2>

    @if (Model.Accounts != null && Model.Accounts.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Номер на сметка</th>
                        <th class="text-end">Наличност</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.AccountNumber</td>
                            <td class="text-end">@($"{account.Balance:0.00} лв.")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <p class="text-muted">Общ брой сметки: <strong>@Model.TotalCount</strong></p>
    }
    else
    {
        <div class="alert alert-info">Няма налични сметки за показване.</div>
    }
</div>
